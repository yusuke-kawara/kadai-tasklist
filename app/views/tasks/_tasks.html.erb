<ul class ="list-unstyled">
    <% tasks.each do |task| %>
    <li class="media mb-3">
        <div class="media-body">
            <div>
                <%=link_to task.user.name, user_path(task.user) %>
        <span class="text-muted">posted at <%=task.created_at %></span>
            </div>
            <div>
                <p class="mb-0"><%= task.content %></p>
            </div>
            <div>
            <% if current_user == task.user %>
            <%= link_to "Delete",task,method: :delete, data: { confirm:"You sure?"},
            class: 'btn btn-danger btn-sm' %>
            <%= link_to 'このタスクを編集する', edit_task_path(task.id) %>
            <% end %>
            </div>
        </div>
    </li>
    <% end %>
    <%= paginate tasks %>
</ul>